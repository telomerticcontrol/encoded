{
    "title": "microRNA quality metric",
    "description": "Schema for reporting microRNA pipeline quality metric",
    "id": "/profiles/micro_rna_quality_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run", "award", "lab", "miRNA_alignments", "miRNA_expression"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/aliases"},
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
   ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "miRNA_alignments": {
            "title": "miRNA alignments",
            "description": "Number of reads mapped to the miRNA subset of genome (unique and multimapped less than 10 times)",
            "comment": "Multimapped to more than 10 locations reads are filtered",
            "type":  "array",
            "uniqueItems": true,
            "items": {
                "title": "Number of reads mapped to the miRNA subset of genome per replicate",
                "type": "object",
                "required": ["replicate", "aligned_reads"],
                "properties": {
                    "replicate": {
                        "title": "Replicate",
                        "description": "Isogenic replicate",
                        "type": "string",
                        "linkTo": "Replicate"
                    },
                    "aligned_reads": {
                        "title": "Aligned reads",
                        "description": "Quantity of reads mapped uniquely or multimapped less than 10 times to the miRNA subset of the genome",
                        "type": "number",
                        "minimum":0
                    }
                }
            }
        },
        "miRNA_expression": {
            "title": "miRNA expression",
            "description": "Number of miRNAs expressed",
            "comment": "miRNAs expressed < 2 cpms are filtered",
            "type":  "array",
            "uniqueItems": true,
            "items": {
                "title": "Number of miRNAs expressed per replicate",
                "type": "object",
                "required": ["replicate", "expressed_mirnas"],
                "properties": {
                    "replicate": {
                        "title": "Replicate",
                        "description": "Isogenic replicate",
                        "type": "string",
                        "linkTo": "Replicate"
                    },
                    "expressed_mirnas": {
                        "title": "Expressed miRNAs",
                        "description": "Quantity of miRNAs expressed with >2 cpms",
                        "type": "number",
                        "minimum":0
                    }
                }
            }
        },
        "replicates_correlation": {
            "title": "Replicates correlation",
            "description": "Spearman correlation coefficient of replicate pairs",
            "type":  "array",
            "uniqueItems": true,
            "items": {
                "title": "Replicates pair correlation",
                "description": "Spearman correlation between replicates pair",
                "type": "object",
                "required": ["replicates", "spearman_correlation"],
                "properties": {
                    "replicates": {
                        "title": "Pair of replicates",
                        "description": "Pair of isogenic replicates",
                        "type":  "array",
                        "uniqueItems": true,
                        "maxItems" : 2,
                        "minItems" : 2,
                        "items": {
                            "title": "Replicate",
                            "description": "Isogenic replicate",
                            "type": "string",
                            "linkTo": "Replicate"
                        }
                    },
                    "spearman_correlation": {
                        "title": "Spearman correlation",
                        "type": "number",
                        "description": "Spearman correlation coefficient of replicates from quantification"
                    }             
                }
            }
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/micro_rna_quality_metric.md"
} 