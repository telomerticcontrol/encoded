{
    "title": "Analysis template",
    "description": "Schema for describing the structure of a complete analysis of certain pipeline.",
    "id": "/profiles/analysis_template.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["analysis_steps", "assembly"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/standard_status"},
        {"$ref": "mixins.json#/uuid" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "pipeline": {
            "title": "Pipeline",
            "description": "Reference to the pipeline",
            "type": "string",
            "permission": "import_items",
            "linkTo": "Pipeline"
        },
        "analysis_steps": {
            "title": "List of required analysis steps",
            "description": "All analysis steps required for considering this analysis complete.",
            "type": "array",
            "minItems": 1,
            "permission": "import_items",
            "items": {
                "title": "Analysis step",
                "comment": "See analysis_step.json for available identifiers.",
                "type": "string",
                "linkTo": "AnalysisStep"
            }
        },
        "assembly": {
            "title": "Mapping assembly",
            "description": "Genome assembly used in the analysis.",
            "type": "string",
            "permission": "import_items",
            "enum": [
                "ce10",
                "ce11",
                "dm3",
                "dm6",
                "GRCh38-minimal",
                "GRCh38",
                "hg19",
                "J02459.1",
                "mm10-minimal",
                "mm10",
                "mm9"
            ]
        },
        "genome_annotation": {
            "title": "Genome annotation",
            "description": "Genome annotation used in the analysis.",
            "comment": "Only applicable to analyses using genome annotation.",
            "type": "string",
            "permission": "import_items",
            "enum": [
                "ENSEMBL V65",
                "M2",
                "M3",
                "M4",
                "M7",
                "M14",
                "miRBase V21",
                "None",
                "V10",
                "V19",
                "V22",
                "V24",
                "V3c",
                "V7",
                "WS235",
                "WS245"
            ]
        }
    },
    "facets": {
        "assembly": {
            "title": "Mapping assembly"
        },
        "genome_annotation": {
            "title": "Genome annotation"
        },
        "pipeline": {
            "title": "Pipeline"
        },
        "status": {
            "title": "Analysis template status"
        }
    },
    "columns": {
        "assembly": {
            "title": "Mapping assembly"
        },
        "genome_annotation": {
            "title": "Genome annotation"
        },
        "pipeline": {
            "title": "Pipeline"
        },
        "status": {
            "title": "Analysis template status"
        }
    },
    "boost_values": {
        "assembly": 1.0,
        "genome_annotation": 1.0
    },
    "changelog": "/profiles/changelogs/analysis_template.md"

}
