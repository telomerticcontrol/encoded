{
    "title": "Analysis",
    "description": "Schema for reporting one complete analysis of the corresponding experiment.",
    "id": "/profiles/analysis.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["analysis_template", "dataset"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        {"$ref": "mixins.json#/accession"},
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/documents"},
        {"$ref": "mixins.json#/notes"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/submitted"},
        {"$ref": "mixins.json#/uuid" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "AN"
        },
        "dataset": {
            "title": "Dataset",
            "description": "The experiment or dataset the analysis belongs to.",
            "comment": "Required. See dataset.json for available identifiers.",
            "type": "string",
            "permission": "import_items",
            "linkTo": "Dataset"
        },
        "analysis_template": {
            "title": "Analysis template",
            "description": "Analysis template for validating analysis",
            "type": "string",
            "linkTo": "AnalysisTemplate"
        },
        "status": {
            "title": "Analysis status",
            "type": "string",
            "permission": "import_items",
            "default": "in progress",
            "enum" : [
                "in progress",
                "released",
                "deleted"
            ]
        }
    },
    "facets": {
        "status": {
            "title": "Analysis status"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession"
        },
        "dataset": {
            "title": "Dataset"
        },
        "status": {
            "title": "Analysis status"
        }
    },
    "boost_values": {
        "aliases": 1.3,
        "output_files.accession": 1.0,
        "output_files.alternate_accessions": 1.0,
        "output_files.file_format": 1.0,
        "output_files.output_type": 1.0,
        "output_files.md5sum": 1.0
    },
    "changelog": "/profiles/changelogs/analysis.md"

}
